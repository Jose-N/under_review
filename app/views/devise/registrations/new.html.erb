<h2>Sign up</h2>
<div class="form-box">
  <fieldset><legend>Your Deets</legend>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="field">
        <%= f.input :first_name, label: 'First Name', required: true, autofocus: true %>
      </div>
      <div class="field">
        <%= f.input :last_name, label: 'Last Name', required: true %>
      </div>
      <div class="field">
        <%= f.input :email, required: true %>
      </div>
      <div class="field">
        <%= f.input :username, label: 'Username', required: true %>
      </div>
      </br>
      <label class="fileContainer">
        Upload your jawn!
        <div class="field">
          <%= f.file_field :avatar, disabled: false %>
        </div>
      </label>
      <div class="field">
        <%= f.input :password, required: true %>
      </div>
      <div class="field">
        <%= f.input :password_confirmation, label: 'Password Confirmation', required: true %>
      </div>
    </div>


    <div class="form-actions">
      <%= f.button :submit, "Sign Up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
